<h1>Editing Books</h1>
<div class="flash">
    <%= flash[:notice] %>
</div>
<%= form_for(@book) do |f| %>
    <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </div>
    <div class="field">
        <%= f.label :body %><br>
        <%= f.text_area :body %>
    </div>

    <%= f.submit %>
<% end %>
<%= link_to 'Show', book_path(@book) %> |
<%= link_to 'Back', books_path %>